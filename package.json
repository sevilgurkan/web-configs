{
  "name": "web-configs",
  "private": true,
  "description": "Common configurations for building web apps",
  "license": "MIT",
  "author": "GÃ¼rkan Sevil",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "eslint:check": "eslint . && turbo run eslint:check",
    "generate": "plop",
    "generate:package": "npx plop package && npx plop docs",
    "lint": "turbo run lint",
    "prepare": "husky",
    "prettier:check": "prettier --check . && turbo run prettier:check",
    "release": "changeset publish",
    "sort-package-json-files": "sort-package-json \"**/package.json\" --ignore \"**/node_modules/**\"",
    "test": "turbo run test"
  },
  "lint-staged": {
    "*": "prettier -w --ignore-unknown",
    "*.{js,jsx,mjs,ts,tsx}": "eslint --fix --max-warnings=0",
    "package.json": "sort-package-json"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.11",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@fmss/commitlint-config": "^0.0.1",
    "@fmss/eslint-plugin": "*",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "plop": "^4.0.1",
    "prettier": "^3.4.2",
    "sort-package-json": "^2.14.0",
    "turbo": "^2.3.4"
  },
  "peerDependencies": {
    "eslint": "^9.18.0",
    "prettier": "^3.4.2"
  },
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=18"
  }
}
